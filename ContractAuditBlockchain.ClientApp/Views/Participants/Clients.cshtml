@model IEnumerable<ClientParticipantListViewModel>
@{
    ViewBag.Title = "Client Users";
}

@Html.Partial("_CreateEditClient", new ClientParticipantCreateEditViewModel())
<div class="col-md-12 text-center">
    <h2>@(ViewBag.Title)</h2>
    <button type="button" class="btn btn-info pull-right" data-toggle="modal" data-target="#CreateClientModal"><span class="glyphicon glyphicon-plus"></span> New Client</button>
</div>


<div class="row col-xs-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aParticipant in Model)
            {
                <tr>
                    <td>@(aParticipant.ID)</td>
                    <td>@(aParticipant.Name)</td>
                    <td>
                        <button type="button" class="btn btn-info btn-sm detailsClientParticipantButton" data-participantid="@(aParticipant.ID)"><span class="glyphicon glyphicon-list-alt"></span> Details</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<div class="clearfix"></div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.detailsClientParticipantButton').click(function (e) {
                var participantId = $(e.currentTarget).data('participantid');
                if (participantId) {
                    window.location = '@(Url.Action("DetailsForClient", "Participants"))/' + participantId;
                }
            });

        });
    </script>
}
